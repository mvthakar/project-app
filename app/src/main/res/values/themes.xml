<resources>

    <style name="Base.Theme.Project"
        parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary_light</item>
        <item name="android:windowBackground">@color/background_light</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background_light</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/background_light</item>

    </style>

    <style name="Theme.Project"
        parent="Base.Theme.Project" />

    <style name="Theme.Project.SplashScreen"
        parent="Theme.SplashScreen">

        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Project</item>

    </style>

    <!-- Button styles -->
    <style name="DefaultButton">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ProfileButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">100dp</item>
    </style>

</resources>